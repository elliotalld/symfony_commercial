{% extends 'template.html.twig' %}

{% block title %}Liste des Fournisseurs{% endblock %}

{% block body %}
    <h1>Liste des Fournisseurs </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Libelle</th>
                <th>Responsable</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Tel</th>
                <th>Portable</th>
                <th>Email</th>
                <th>Matfisc</th>
                <th>Cin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fournisseur in fournisseurs %}
            <tr>
                <td>{{ fournisseur.id }}</td>
                <td>{{ fournisseur.code }}</td>
                <td>{{ fournisseur.libelle }}</td>
                <td>{{ fournisseur.responsable }}</td>
                <td>{{ fournisseur.adresse }}</td>
                <td>{{ fournisseur.ville }}</td>
                <td>{{ fournisseur.tel }}</td>
                <td>{{ fournisseur.portable }}</td>
                <td>{{ fournisseur.email }}</td>
                <td>{{ fournisseur.matfisc }}</td>
                <td>{{ fournisseur.cin }}</td>
                <td>
                    <a href="{{ path('fournisseur_show', {'id': fournisseur.id}) }}">show</a>
                    <a href="{{ path('fournisseur_edit', {'id': fournisseur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('fournisseur_new') }}">Create new</a>
{% endblock %}
